{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
		"outDir": "dist/esm",
		"target": "ES2019",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2020"],
	},
	"include": ["src"]
}
